{
  "name": "vscode-commander",
  "displayName": "vscode-commander",
  "description": "VS Code Commander",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "enabledApiProposals": [
    "lmTools"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-commander.helloWorld",
        "title": "Hello World"
      }
    ],
    "chatParticipants": [
      {
        "id": "c",
        "fullName": "VS Code Commander",
        "name": "commander",
        "description": "VS Code Commander"
      }
    ],
    "languageModelTools": [
      {
        "id": "searchSettings",
        "displayName": "Search settings",
        "modelDescription": "Use this tool to search for settings. This tool will return all settings that contain the provided keywords. It also includes the description, default value, current value and other possible values for each setting.",
        "supportedContentTypes": [
          "application/json"
        ],
        "parametersSchema": {
          "type": "object",
          "properties": {
            "keywords": {
              "type": "string",
              "description": "List of keywords to search for the settings"
            }
          }
        },
        "tags": [
          "commander"
        ]
      },
      {
        "id": "updateSetting",
        "displayName": "Update setting",
        "modelDescription": "Use this tool to update a setting. This tool will update the setting with the provided value.",
        "tags": [
          "commander"
        ],
        "parametersSchema": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string",
              "description": "Id of the setting"
            },
            "value": {
              "types": [
                "string",
                "number",
                "boolean",
                "object"
              ],
              "description": "The new value for the setting"
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "dependencies": {
    "minisearch": "^7.1.0"
  }
}